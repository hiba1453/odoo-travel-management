<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Règle de sécurité : Seuls l'employé et son manager peuvent voir les déplacements -->
        <record id="deplacement_employee_manager_rule" model="ir.rule">
            <field name="name">Déplacement: Employé et Manager uniquement</field>
            <field name="model_id" ref="model_gestion_deplacement"/>
            <field name="domain_force">[
                '|',
                ('employee_id.user_id', '=', user.id),
                ('manager_id.user_id', '=', user.id)
            ]</field>
        </record>
    </data>
</odoo>

